<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  <%= favicon_link_tag 'favicon-32x32.png' %>
  <title>
    <%= yield :page_title %>
  </title>
</head>
<body class="relative min-h-screen bg-light-grey dark:bg-very-dark-grey">

<main class="flex min-h-screen items-center justify-center">
  <div class="mx-4 my-4 flex flex-col gap-6 rounded-md bg-white p-6 basis-[30rem] dark:bg-dark-grey md:p-8">
    <%= yield %>
  </div>
</main>

<div id="flash_container" class="absolute z-50 flex flex-col gap-y-2 top-1.5 right-1.5 overflow-hidden">
  <%= render partial: 'shared/flash' %>
</div>

</body>
</html>