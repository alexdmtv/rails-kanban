<h2 class="text-heading-l dark:text-white">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-col gap-6' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col gap-2">
    <%= f.label :first_name, class: 'input_label' %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", required: true, class: 'input' %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :last_name, class: 'input_label' %>
    <%= f.text_field :last_name, autocomplete: "family-name", required: true, class: 'input' %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :email, class: 'input_label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :password, class: 'input_label' %>
    <% if @minimum_password_length %>
      <em class="text-body-l text-medium-grey">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :password_confirmation, class: 'input_label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'primary_lg_btn' %>
  </div>
<% end %>

<%= render "devise/shared/social_buttons"%>

<%= render "devise/shared/links" %>
