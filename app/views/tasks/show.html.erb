<%= render 'shared/modal' do %>

  <% content_for :dots_menu_items do %>
    <%= link_to 'Edit task', edit_task_path(@task), class: 'px-4' %>
    <%= link_to 'Delete task', @task, data: { 'turbo-frame': '_top', 'turbo-method': :delete, 'turbo-confirm': 'Are you sure you want to delete this task?' }, class: 'px-4 text-red' %>
  <% end %>

  <div class="flex flex-col gap-y-6">
    <div class="flex items-start justify-between gap-4">
      <h2 class="text-heading-l dark:text-white">
        <%= @task.title %>
      </h2>
      <%= render 'shared/dots_menu' %>
    </div>

    <p class="text-body-l text-medium-grey">
      <%= @task.description %>
    </p>

    <%= render partial: 'show_form', locals: { task: @task } %>
  </div>
<% end %>
